<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="nena_postulation_type_view_tree" model="ir.ui.view">
    <field name="name">nena.postulation.type.view.tree</field>
    <field name="model">nena.postulation.type</field>
    <field name="arch" type="xml">
      <list string="Postulation Type">
        <field name="name" />
        <field name="code" />
        <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <record id="nena_postulation_type_view_form" model="ir.ui.view">
    <field name="name">nena.postulation.type.view.form</field>
    <field name="model">nena.postulation.type</field>
    <field name="arch" type="xml">
      <form string="Postulation Type">
        <sheet>
          <group>
            <h1><field name="name" /></h1>
            <field name="code" />
            <field name="active" widget="boolean_toggle" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="nena_postulation_type_action" model="ir.actions.act_window">
    <field name="name">Postulation Type</field>
    <field name="res_model">nena.postulation.type</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem
        id="nena_postulation_type_menu"
        name="Postulation Type"
        action="nena_postulation_type_action"
        parent="nena_configuration_menu"
        sequence="10"/>
</odoo>
