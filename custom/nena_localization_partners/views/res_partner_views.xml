<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista tipo formulario extendida -->
    <record id="view_partner_form_nena_localization" model="ir.ui.view">
        <field name="name">res.partner.form.nena.localization</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Fiscal Address">
                    <field name="fiscal_state_id"/>
                    <field name="fiscal_municipality_id"/>
                    <field name="fiscal_city_id"/>
                </group>

                <group string="Municipal Address" attrs="{'invisible': [('customer_rank', '=', 0)]}">
                    <field name="municipal_state_id"/>
                    <field name="municipal_municipality_id"/>
                    <field name="municipal_city_id"/>
                </group>
            </xpath>
        </field>
    </record>

