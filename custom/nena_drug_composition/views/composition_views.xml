<odoo>
    <!-- Vista formulario -->
    <record id="view_composition_form" model="ir.ui.view">
        <field name="name">drug.composition.form</field>
        <field name="model">nena.drug.composition</field>
        <field name="arch" type="xml">
            <form string="Drug Composition">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="reference"/>
                    </group>
                    <group>
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="active_principle_id"/>
                                <field name="quantity"/>
                                <field name="unit_id"/>
                                <field name="quantity_jar"/>
                                <field name="unit_jar_id" invisible=''/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista -->
    <record id="view_composition_list" model="ir.ui.view">
        <field name="name">drug.composition.list</field>
        <field name="model">nena.drug.composition</field>
        <field name="arch" type="xml">
            <list string="Drug Compositions">
                <field name="product_id"/>
                <field name="reference"/>
            </list>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_composition" model="ir.actions.act_window">
        <field name="name">Drug Compositions</field>
        <field name="res_model">nena.drug.composition</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_composition" name="Compositions" parent="menu_drug_root" action="action_composition"/>
</odoo>