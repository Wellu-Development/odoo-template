<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="nena_drug_presentation_view_form" model="ir.ui.view">
        <field name="name">nena.drug.presentation.form</field>
        <field name="model">nena.drug.presentation</field>
        <field name="arch" type="xml">
            <form string="Product Presentation">
                <sheet>
                    <group>
                        <field name="reference"/>
                        <field name="abbrev_presentation"/>
                        <field name="description_presentation"/>
                        <field name="has_dosage"/>
                        <field name="uom_presentation_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_drug_presentation_view_list" model="ir.ui.view">
        <field name="name">nena.drug.presentation.list</field>
        <field name="model">nena.drug.presentation</field>
        <field name="arch" type="xml">
            <list string="Product Presentation">
                <field name="reference"/>
                <field name="abbrev_presentation"/>
                <field name="description_presentation"/>
                <field name="has_dosage"/>
            </list>
        </field>
    </record>

    <record id="nena_drug_presentation_action" model="ir.actions.act_window">
        <field name="name">Product Presentation</field>
        <field name="res_model">nena.drug.presentation</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="nena_drug_presentation_menu" 
            name="Product Presentation" 
            action="nena_drug_presentation_action" 
            parent="nena_medication_management_menu" 
            sequence="10" />
</odoo>
