<odoo>
    <record id="view_nena_chain_form" model="ir.ui.view">
        <field name="name">nena.chain.form</field>
        <field name="model">nena.chain</field>
        <field name="arch" type="xml">
            <form string="Cadena">
                <sheet>
                    <group>
                        <h1><field name="name" /></h1>
                    </group>
                    <group>
                        <field name="codchain"/>
                    </group>
                    <group colspan="2">
                        <group>
                            <field name="status_id" domain="[('gen_category_id.code', '=', 'CAD')]" 
                                    options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}" />
                            <field name="cause_status_id" domain="[('gen_category_id.code', '=', 'CAD')]" />
                        </group>
                        <group>
                            <field name="commercialduct"/>
                            <field name="promptpaymentdiscount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Datos Generales">
                            <group colspan="2">
                                <group>
                                    <field name="credit_limit" />  
                                    <field name="balance" /> 
                                    <field name="transit_amount" /> 
                                    <field name="prepaid_amount" /> 
                                    <field name="availability_amount" /> 
                                </group>
                                <group>
                                    <field name="condition_ids" 
                                            widget="many2many_checkboxes" 
                                            domain="[('gen_category_id.code', '=', 'CAD')]" />
                                </group>
                            </group>
                        </page>
                        <page string="Listado de Clientes">
                            <field name="client_ids">
                                <list delete="0" create="0">
                                    <field name="partner_code" />
                                    <field name="name" />
                                    <field name="status_id" />
                                    <field name="prepaid_amount" /> 
                                    <field name="credit_limit" /> 
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_nena_chain_list" model="ir.ui.view">
        <field name="name">nena.chain.list</field>
        <field name="model">nena.chain</field>
        <field name="arch" type="xml">
            <list string="Cadenas">
                <field name="name"/>
                <field name="codchain"/>
                <field name="status_id"/>
                <field name="commercialduct"/>
                <field name="promptpaymentdiscount"/>
            </list>
        </field>
    </record>

    <record id="action_nena_chain" model="ir.actions.act_window">
        <field name="name">Cadenas</field>
        <field name="res_model">nena.chain</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>