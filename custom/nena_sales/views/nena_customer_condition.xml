<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nena_customer_condition_view_tree" model="ir.ui.view">
        <field name="name">nena.customer.condition.view.tree</field>
        <field name="model">nena.customer.condition</field>
        <field name="arch" type="xml">
            <list string="Customer/Chain Conditions">
                <field name="code"/>
                <field name="description"/>
                <field name="category"/>
            </list>
        </field>
    </record>

    <record id="nena_customer_condition_view_form" model="ir.ui.view">
        <field name="name">nena.customer.condition.view.form</field>
        <field name="model">nena.customer.condition</field>
        <field name="arch" type="xml">
            <form string="Customer/Chain Conditions">
                <sheet>
                    <group>
                        <h1><field name="description" /></h1>
                        <field name="code"/>
                        <field name="category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_customer_condition_action" model="ir.actions.act_window">
        <field name="name">Customer/Chain Conditions</field>
        <field name="res_model">nena.customer.condition</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="nena_customer_condition_menu"
        name="Customer/Chain Conditions"
        action="nena_customer_condition_action"
        parent="nena_general_parameter.nena_general_parameter_menu"
        sequence="10"/> 
</odoo>