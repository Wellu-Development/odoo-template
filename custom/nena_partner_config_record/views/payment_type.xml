<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View payment.type View List -->
    <record id="view_payment_type_tree" model="ir.ui.view">
        <field name="name">view.payment.type.tree</field>
        <field name="model">nena.payment.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="description"/>
                 <field name="active" widget="boolean_toggle"/>
                 <field name="ref"/>
            </list>
        </field>
    </record>

    <!-- View payment.type form -->
    <record id="view_payment_type_form" model="ir.ui.view">
        <field name="name">view.payment.type.form</field>
        <field name="model">nena.payment.type</field>
        <field name="arch" type="xml">
            <form string="Payment Type">
                <sheet>
                    <group>
                        <field name="description" placeholder="Descripcion.."/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="ref" placeholder="Referencia.."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action payment.type -->
    <record id="payment_type_action" model="ir.actions.act_window">
        <field name="name">Payment Type</field>
        <field name="res_model">nena.payment.type</field>
        <field name="view_mode">list,form,pivot</field>
    </record>

</odoo>
