<odoo>
    <!-- Vista formulario -->
    <record id="nena_drug_composition_view_form" model="ir.ui.view">
        <field name="name">nena.drug.composition.form</field>
        <field name="model">nena.drug.composition</field>
        <field name="arch" type="xml">
            <form string="Drug Compositions">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="reference"/>
                            <field name="presentation_id"/>
                        </group>
                        <group invisible="(presentation_id and not has_dosage) or (not presentation_id)">
                            <field name="dosage_amount"/>
                            <field name="dosage_unit"/>
                        </group>
                    </group>
                    <group>
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="active_principle_id"/>
                                <field name="quantity"/>
                                <field name="unit_id"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_drug_composition_view_list" model="ir.ui.view">
        <field name="name">nena.drug.composition.list</field>
        <field name="model">nena.drug.composition</field>
        <field name="arch" type="xml">
            <list string="Drug Compositions">
                <field name="product_id"/>
                <field name="reference"/>
            </list>
        </field>
    </record>

    <record id="nena_drug_composition_action" model="ir.actions.act_window">
        <field name="name">Drug Compositions</field>
        <field name="res_model">nena.drug.composition</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="nena_drug_composition_menu" 
                name="Drug Compositions" 
                action="nena_drug_composition_action" 
                parent="nena_medication_management_menu" 
                sequence="20" />
</odoo>