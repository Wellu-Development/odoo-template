<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="nena_customer_clasification_view_tree" model="ir.ui.view">
    <field name="name">nena.customer.clasification.view.tree</field>
    <field name="model">nena.customer.clasification</field>
    <field name="arch" type="xml">
      <list string="Customer Clasification">
        <field name="code" />
        <field name="description" />
        <field name="amount_from" />
        <field name="amount_until" />
        <field name="category" />
        <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <record id="nena_customer_clasification_view_form" model="ir.ui.view">
    <field name="name">nena.customer.clasification.view.form</field>
    <field name="model">nena.customer.clasification</field>
    <field name="arch" type="xml">
      <form string="Customer Clasification">
        <sheet>
          <group>
            <field name="code" />
            <field name="description" />
            <field name="amount_from" />
            <field name="amount_until" />
            <field name="category" />
            <field name="active" widget="boolean_toggle" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="nena_customer_clasification_action" model="ir.actions.act_window">
    <field name="name">Customer Clasification</field>
    <field name="res_model">nena.customer.clasification</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>