<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="document_type_view_tree" model="ir.ui.view">
    <field name="name">document.type.view.tree</field>
    <field name="model">document.type</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <record id="document_type_view_form" model="ir.ui.view">
    <field name="name">document.type.view.form</field>
    <field name="model">document.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <h1>
              <field name="name" />
            </h1>

            <!-- <field name="customer_type_id" />
            <field name="supplier_type_id" />
            <field name="product_type_id" /> -->
            <field name="regulatory_entity_id" />
            <field name="active" widget="boolean_toggle" />
          </group>
          <notebook>
              <page name="approvers" string="Aprobadores">
                  <field name="approver_ids">
                      <list editable="bottom">
                          <field name="department_id" options="{'no_open': True, 'no_create': True}"/>
                          <field name="employee_ids" domain="[('department_id', '=', department_id),('job_id.is_approver', '=', True),('user_id', '!=', False)]" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                          <field name="activity_type_id" string="Type activity" force_save="1" options="{'no_open': True, 'no_create': True}"/>
                          <field name="required"/>
                          <field name="sequence"/>
                      </list>
                  </field>
              </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="document_type_action" model="ir.actions.act_window">
    <field name="name">Tipo de documentos y permisos</field>
    <field name="res_model">document.type</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
