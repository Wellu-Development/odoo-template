<odoo>
    <record id="view_tipo_producto_form" model="ir.ui.view">
        <field name="name">tipo.producto.form</field>
        <field name="model">tipo.producto</field>
        <field name="arch" type="xml">
            <form string="Tipo de Producto">
                <sheet>
                    <group>
                        <field name="idn"/>
                        <field name="valor"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tipo_producto_list" model="ir.ui.view">
        <field name="name">tipo.producto.list</field>
        <field name="model">tipo.producto</field>
        <field name="arch" type="xml">
            <list string="Tipos de Producto">
                <field name="idn"/>
                <field name="valor"/>
            </list>
        </field>
    </record>

    <record id="action_tipo_producto" model="ir.actions.act_window">
        <field name="name">Tipos de Producto</field>
        <field name="res_model">tipo.producto</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_tipo_producto_root" name="Tipos de Producto" sequence="10"/>
    <menuitem id="menu_tipo_producto" name="GestiÃ³n de Tipo de Productos" parent="menu_tipo_producto_root" action="action_tipo_producto"/>
</odoo>