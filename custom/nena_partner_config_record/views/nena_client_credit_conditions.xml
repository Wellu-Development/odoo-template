<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_nena_client_credit_conditions" model="ir.ui.view">
        <field name="name">nena.client.credit.conditions.form</field>
        <field name="model">nena.client.credit.conditions</field>
        <field name="arch" type="xml">
            <form string="Condiciones Crediticias">
                <sheet>
                    <group>
                        <!--<field name="chain_id" /> -->
                        <field name="credit_limit" />
                        <field name="balance" />
                        <field name="permit_overdraft" />
                        <field name="availability_amount" />
                        <field name="transit_amount" />
                        <field name="prepaid_amount" />
                        <field name="notes" />
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_nena_client_credit_conditions" model="ir.ui.view">
        <field name="name">nena.client.credit.conditions.list</field>
        <field name="model">nena.client.credit.conditions</field>
        <field name="arch" type="xml">
            <list string="Condiciones Crediticias">
                <!--<field name="chain_id" /> -->
                <field name="credit_limit" />
                <field name="balance" />
                <field name="permit_overdraft" />
                <field name="availability_amount" />
                <field name="transit_amount" />
                <field name="prepaid_amount" />
            </list>
        </field>
    </record>

    <record id="action_nena_client_credit_conditions" model="ir.actions.act_window">
        <field name="name">Condiciones Crediticias</field>
        <field name="res_model">nena.client.credit.conditions</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
