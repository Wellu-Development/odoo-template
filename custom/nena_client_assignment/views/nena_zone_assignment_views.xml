<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_nena_zone_assigment_list" model="ir.ui.view">
        <field name="name">nena_zone_assigment.list</field>
        <field name="model">nena.zone.assigment</field>
        <field name="arch" type="xml">
            <list string="Zonas Asignadas">
                <field name="nena_hr_employee_id"/>
                <field name="nena_zone_ids"/>
            </list>
        </field>
    </record>

    <record id="view_nena_zone_assigment_form" model="ir.ui.view">
        <field name="name">nena_zone_assigment.form</field>
        <field name="model">nena.zone.assigment</field>
        <field name="arch" type="xml">
            <form string="Property Tag">
                <sheet>
                    <group>
                        <field name="nena_hr_employee_id"/>
                        <field name="nena_zone_ids" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_nena_zone_assigment" model="ir.actions.act_window">
        <field name="name">Zone Assignment</field>
        <field name="res_model">nena.zone.assigment</field>
        <field name="view_mode">list,form</field>
    </record>

    
</odoo>
