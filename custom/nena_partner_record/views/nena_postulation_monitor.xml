<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nena_postulation_monitor_view_list" model="ir.ui.view">
        <field name="name">nena.postulation.monitor.view.tree</field>
        <field name="model">nena.postulation.monitor</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Postulation Monitor">
                <field name="name"/>
                <field name="postulation_type"/>
                <field name="sales"/>
                <field name="regency"/>
                <field name="legal"/>
                <field name="payment"/>
                <field name="write_date" string="Ultima Actualizacion"/>
            </list>
        </field>
    </record>

    <record id="nena_postulation_monitor_action" model="ir.actions.act_window">
        <field name="name">Postulation Monitor</field>
        <field name="res_model">nena.postulation.monitor</field>
        <field name="view_mode">list</field>
        <field name="context">{'create': False}</field>
        <field name="domain">['|', '|', '|',('sales', '=', False),('regency', '=', False),('legal', '=', False),('payment', '=', False)]</field>
    </record>

    <menuitem
        id="nena_postulation_monitor_menu"
        name="Postulation Monitor"
        action="nena_postulation_monitor_action"
        parent="nena_partner_record_menu"
        sequence="10"/>
</odoo>