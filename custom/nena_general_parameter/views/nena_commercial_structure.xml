<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nena_region_view_tree" model="ir.ui.view">
        <field name="name">nena.region.view.tree</field>
        <field name="model">nena.region</field>
        <field name="arch" type="xml">
            <list string="Region">
                <field name="code" />
                <field name="name" />
                <field name="codgerente"/>
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <record id="nena_region_view_form" model="ir.ui.view">
        <field name="name">nena.region.view.form</field>
        <field name="model">nena.region</field>
        <field name="arch" type="xml">
            <form string="Region">
                <sheet>
                    <group>
                        <h1><field name="name" /></h1>
                        <field name="code" />
                        <field name="codgerente" />
                        <field name="active" widget="boolean_toggle" />
                    </group>
                    <notebook>
                        <page name="Districts" >
                            <field name="district_ids">
                                <list editable="bottom">
                                    <field name="code" /> 
                                    <field name="name" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="nena_district_view_tree" model="ir.ui.view">
        <field name="name">nena.district.view.tree</field>
        <field name="model">nena.district</field>
        <field name="arch" type="xml">
            <list string="District">
                <field name="code" />
                <field name="name" />
                <field name="region_id" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <record id="nena_district_view_form" model="ir.ui.view">
        <field name="name">nena.district.view.form</field>
        <field name="model">nena.district</field>
        <field name="arch" type="xml">
            <form string="District">
                <sheet>
                    <group>
                        <h1><field name="name" /></h1>
                        <field name="region_id" options="{'no_create': True, 'no_open': True}" />
                        <field name="code" />
                        <field name="active" widget="boolean_toggle" />
                    </group>
                    <notebook>
                        <page name="Zones" >
                            <field name="zones_ids">
                                <list editable="bottom">
                                    <field name="code" />
                                    <field name="description" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_zone_view_tree" model="ir.ui.view">
        <field name="name">nena.zone.view.tree</field>
        <field name="model">nena.zone</field>
        <field name="arch" type="xml">
            <list string="Zone">
                <field name="code" />
                <field name="description" />
                <field name="district_id" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <record id="nena_zone_view_form" model="ir.ui.view">
        <field name="name">nena.zone.view.form</field>
        <field name="model">nena.zone</field>
        <field name="arch" type="xml">
            <form string="Zone">
                <sheet>
                    <group>
                        <h1><field name="description" /></h1>
                        <field name="district_id" options="{'no_create': True, 'no_open': True}" />       
                        <field name="code" />
                        <field name="active" widget="boolean_toggle" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_region_action" model="ir.actions.act_window">
        <field name="name">Regions</field>
        <field name="res_model">nena.region</field>
        <field name="view_mode">list,form</field> 
    </record>

    <record id="nena_district_action" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">nena.district</field>
        <field name="view_mode">list,form</field> 
    </record>

    <record id="nena_zone_action" model="ir.actions.act_window">
        <field name="name">Zones</field>
        <field name="res_model">nena.zone</field>
        <field name="view_mode">list,form</field> 
    </record>
</odoo>