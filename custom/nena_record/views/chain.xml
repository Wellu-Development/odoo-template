<odoo>
    <record id="view_nena_chain_form" model="ir.ui.view">
        <field name="name">nena.chain.form</field>
        <field name="model">nena.chain</field>
        <field name="arch" type="xml">
            <form string="Cadena">
                <sheet>
                    <group>
                        <h1><field name="name" readonly="name == '(Ninguna)'" /></h1>
                    </group>
                    <group>
                        <field name="codchain" readonly="name == '(Ninguna)'" style="width: 80px;"/>
                        <div class="o_td_label">
                            <label for="commercialduct" />
                        </div>
                        <div class="d-flex">
                            <field name="commercialduct" style="width: 90px;" />
                            <span class="o_form_label mx-3 oe_edit_only text-right" style="width: 25ch; font-weight:bold;" >Dcto. Pronto Pago</span>
                            <field name="promptpaymentdiscount" tyle="width: 90px;" />
                        </div>
                    </group>
                    <notebook>
                        <page string="Datos Generales">
                            <group colspan="2">
                                <group>
                                    <div class="o_td_label">
                                        <label for="status_id" />
                                    </div>
                                    <div class="d-flex">
                                        <field name="status_id" style="width: 150px;" domain="[('gen_management_id.code', '=', 'CAD')]"
                                                options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}" />
                                        <span class="o_form_label mx-3 oe_edit_only text-center" style="width: 10ch; font-weight:bold;" >Causa</span>
                                        <field name="cause_status_id" readonly="1" domain="[('gen_status_id', '=', status_id)]"
                                                options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}" />
                                    </div>
                                    <separator string="CONDICION CREDITICIA" />
                                    <field name="chain_credit_limit" />  
                                    <field name="chain_credit_balance" /> 
                                    <field name="chain_credit_transit" /> 
                                    <field name="chain_credit_prepaid" /> 
                                    <field name="chain_credit_availability" /> 
                                </group>
                                <group>
                                    <field name="condition_ids" 
                                            widget="many2many_checkboxes" 
                                            domain="[('gen_management_id.code', '=', 'CAD')]" />
                                </group>
                            </group>
                        </page>
                        <page string="Listado de Clientes">
                            <field name="client_ids">
                                <list delete="0" create="0">
                                    <field name="partner_code" />
                                    <field name="name" />
                                    <field name="status_id" />
                                    <field name="client_credit_limit" /> 
                                    <field name="client_credit_prepaid" /> 
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_nena_chain_list" model="ir.ui.view">
        <field name="name">nena.chain.list</field>
        <field name="model">nena.chain</field>
        <field name="arch" type="xml">
            <list string="Cadenas">
                <field name="name"/>
                <field name="codchain"/>
                <field name="status_id"/>
                <field name="cause_status_id"/>
            </list>
        </field>
    </record>

    <record id="action_nena_chain" model="ir.actions.act_window">
        <field name="name">Cadenas</field>
        <field name="res_model">nena.chain</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>