<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="nena_product_class_view_tree" model="ir.ui.view">
    <field name="name">nena.product.class.view.tree</field>
    <field name="model">nena.product.class</field>
    <field name="arch" type="xml">
      <list string="Product Class">
        <field name="code"/>
        <field name="description"/>
        <field name="active" widget="boolean_toggle"/>
      </list>
    </field>
  </record>

  <record id="nena_product_class_view_form" model="ir.ui.view">
    <field name="name">nena.product.class.view.form</field>
    <field name="model">nena.product.class</field>
    <field name="arch" type="xml">
      <form string="Product Class">
        <sheet>
          <group>
            <h1><field name="description" /></h1>
            <field name="code" />
            <field name="product_family_id"
                    options="{'no_quick_create':True,'no_create':True,'no_create_edit':True 'no_open': True}"/>
            <field name="active" />
          </group>
        </sheet>
        <chatter />
      </form>
    </field>
  </record>

  <record id="nena_product_class_action" model="ir.actions.act_window">
    <field name="name">Product Class</field>
    <field name="res_model">nena.product.class</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem
    id="nena_product_class_menu"
    name="Product Class"
    action="nena_product_class_action"
    parent="stock.menu_product_in_config_stock" 
    sequence="40"/>
</odoo>
