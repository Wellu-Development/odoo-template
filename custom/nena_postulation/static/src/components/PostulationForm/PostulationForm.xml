<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="nena_postulation.PostulationFormTemplate">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="mb-4 fw-bold text-primary">
                        <i class="bi bi-clipboard-check me-2"></i>Postulation Client
                    </h1>
                    
                    <p class="text-muted mb-4">Please fill in all required fields to submit your postulation</p>

                    <form t-on-submit="onSubmitHandler">
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light border-bottom">
                                <h3 class="mb-0 text-dark">
                                    <i class="bi bi-building me-2 text-primary"></i>Company Data
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="company_name" class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="company_name"
                                            id="company_name"
                                            type="text" 
                                            placeholder="Enter company name"
                                            t-att-value="state.data.company_name" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Company name is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="company_vat" class="form-label fw-semibold">Rif <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="company_vat"
                                            id="company_vat"
                                            type="text" 
                                            placeholder="Enter RIF number"
                                            t-att-value="state.data.company_vat" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            RIF is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="company_phone" class="form-label fw-semibold">Phone <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="company_phone"
                                            id="company_phone"
                                            type="tel" 
                                            placeholder="Enter phone number"
                                            t-att-value="state.data.company_phone" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Phone number is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="company_email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="company_email"
                                            id="company_email"
                                            type="email" 
                                            placeholder="Enter email address"
                                            t-att-value="state.data.company_email" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Valid email is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="company_country_id" class="form-label fw-semibold">Country <span class="text-danger">*</span></label>
                                        <select 
                                            class="form-select form-select-lg"
                                            name="company_country_id"
                                            id="company_country_id"
                                            t-att-value="state.data.company_country_id"
                                            t-on-change="onChangeCountryIdHandler"
                                            required="1"
                                        >
                                            <t t-foreach="state.countries" t-as="country" t-key="`${country.code}-${country.id}`">
                                                <option t-att-value="country.id">
                                                    <t t-out="country.name"/>
                                                </option>
                                            </t>
                                        </select>
                                        <div class="invalid-feedback">
                                            Please select a country.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="company_state_id" class="form-label fw-semibold">State <span class="text-danger">*</span></label>
                                        <select 
                                            class="form-select form-select-lg"
                                            name="company_state_id"
                                            id="company_state_id"
                                            t-att-value="state.data.company_state_id"
                                            t-on-change="onChangeStateIdHandler"
                                            required="1"
                                        >
                                            <t t-foreach="state.filterStates" t-as="st" t-key="`${st.code}-${st.id}`">
                                                <option t-att-value="st.id">
                                                    <t t-out="st.name"/>
                                                </option>
                                            </t>
                                        </select>
                                        <div class="invalid-feedback">
                                            Please select a state.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="company_city_id" class="form-label fw-semibold">City <span class="text-danger">*</span></label>
                                        <select 
                                            class="form-select form-select-lg"
                                            name="company_city_id"
                                            id="company_city_id"
                                            t-att-value="state.data.company_city_id"
                                            t-on-change="onChangeCityIdHandler"
                                            required="1"
                                        >
                                            <t t-foreach="state.filterCities" t-as="city" t-key="`${city.zipcode}-${city.id}`">
                                                <option t-att-value="city.id">
                                                    <t t-out="city.name"/>
                                                </option>
                                            </t>
                                        </select>
                                        <div class="invalid-feedback">
                                            Please select a city.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="company_website" class="form-label fw-semibold">Website</label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="company_website"
                                            id="company_website"
                                            type="url" 
                                            placeholder="https://example.com"
                                            t-att-value="state.data.company_website" 
                                            t-on-change="onChangeHandler"
                                        />
                                    </div>
                                    <div class="col-md-3">
                                        <label for="company_zip" class="form-label fw-semibold">Zip <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="company_zip"
                                            id="company_zip"
                                            type="text" 
                                            placeholder="Zip code"
                                            t-att-value="state.data.company_zip" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Zip code is required.
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <label for="company_street" class="form-label fw-semibold">Address <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="company_street"
                                            id="company_street"
                                            type="text" 
                                            placeholder="Enter street address"
                                            t-att-value="state.data.company_street" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Address is required.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light border-bottom">
                                <h3 class="mb-0 text-dark">
                                    <i class="bi bi-person me-2 text-primary"></i>Person Data
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="person_name" class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="person_name"
                                            id="person_name"
                                            type="text" 
                                            placeholder="Enter full name"
                                            t-att-value="state.data.person_name" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Name is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="person_vat" class="form-label fw-semibold">C.I. <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="person_vat"
                                            id="person_vat"
                                            type="text" 
                                            placeholder="Enter RIF number"
                                            t-att-value="state.data.person_vat" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            RIF is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="person_phone" class="form-label fw-semibold">Phone <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="person_phone"
                                            id="person_phone"
                                            type="tel" 
                                            placeholder="Enter phone number"
                                            t-att-value="state.data.person_phone" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Phone number is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="person_email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="person_email"
                                            id="person_email"
                                            type="email" 
                                            placeholder="Enter email address"
                                            t-att-value="state.data.person_email" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Valid email is required.
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="person_function" class="form-label fw-semibold">Job <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="person_function"
                                            id="person_function"
                                            type="text" 
                                            placeholder="Enter job title"
                                            t-att-value="state.data.company_job" 
                                            t-on-change="onChangeHandler"
                                            required="1"
                                        />
                                        <div class="invalid-feedback">
                                            Job title is required.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light border-bottom">
                                <h3 class="mb-0 text-dark">
                                    <i class="bi bi-person me-2 text-primary"></i>Required Files
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="file_article_incorporation" class="form-label fw-semibold"> Articles of incorporation <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="file_article_incorporation"
                                            id="file_article_incorporation"
                                            type="file" 
                                            t-att-value="state.files.article_incorporation" 
                                            t-on-change="onChangeFilesHandler"
                                            required="1"
                                            accept="application/pdf"
                                        />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="person_function" class="form-label fw-semibold">Operating permit <span class="text-danger">*</span></label>
                                        <input 
                                            class="form-control form-control-lg"
                                            name="file_operation_permit"
                                            id="file_operation_permit"
                                            type="file" 
                                            t-att-value="state.files.operation_permit" 
                                            t-on-change="onChangeFilesHandler"
                                            required="1"
                                            accept="application/pdf"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <button type="reset" class="btn btn-outline-secondary btn-lg">
                                Clear
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i>Send
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </t>
</templates>
