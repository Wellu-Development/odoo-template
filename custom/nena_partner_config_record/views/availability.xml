<odoo>
    <record id="view_nena_availability_form" model="ir.ui.view">
        <field name="name">nena.availability.form</field>
        <field name="model">nena.availability</field>
        <field name="arch" type="xml">
            <form string="Disponibilidad Financiera">
                <sheet>
                    <group>
                        <field name="balance"/>
                        <field name="creditlimit"/>
                        <field name="permitamount"/>
                        <field name="transitamount"/>
                        <field name="prepaidamount"/>
                        <field name="availabilityamount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_nena_availability_list" model="ir.ui.view">
        <field name="name">nena.availability.list</field>
        <field name="model">nena.availability</field>
        <field name="arch" type="xml">
            <list string="Disponibilidades">
                <field name="balance"/>
                <field name="creditlimit"/>
                <field name="permitamount"/>
                <field name="transitamount"/>
                <field name="prepaidamount"/>
                <field name="availabilityamount"/>
            </list>
        </field>
    </record>

    <record id="action_nena_availability" model="ir.actions.act_window">
        <field name="name">Disponibilidades</field>
        <field name="res_model">nena.availability</field>
        <field name="view_mode">list,form</field>
    </record>
