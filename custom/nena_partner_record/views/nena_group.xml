<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="nena_group_view_form" model="ir.ui.view">
        <field name="name">nena.group.view.form</field>
        <field name="model">nena.group</field>
        <field name="arch" type="xml">
            <form string="Group">
                <sheet>
                    <group>
                        <h1><field name="name"/></h1>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_group_view_tree" model="ir.ui.view">
        <field name="name">nena.group.view.tree</field>
        <field name="model">nena.group</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="code"/> 
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="nena_group_action" model="ir.actions.act_window">
        <field name="name">Group</field>
        <field name="res_model">nena.group</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="nena_group_menu"
        name="Groups Sheet"
        action="nena_group_action"
        parent="nena_partner_record_customer_menu"
        sequence="10"/>
</odoo>