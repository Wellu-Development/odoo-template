<odoo>
    <record id="view_hr_department_form_inherit_nena_category" model="ir.ui.view">
        <field name="name">hr.department.form.inherit.nena.category</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='manager_id']" position="before" required="1">
                <field name="nena_gen_category_id"/>
            </xpath>
        </field>
    </record>
</odoo>