<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_document_type" model="ir.ui.view">
        <field name="name">nena.document.type.form</field>
        <field name="model">nena.document.type</field>
        <field name="arch" type="xml">
            <form string="Tipos de Documentos">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="definition"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_document_type_view_tree" model="ir.ui.view">
        <field name="name">nena.document.type.list</field>
        <field name="model">nena.document.type</field>
        <field name="arch" type="xml">
         <list string="">
                <field name="name"/>
                <field name="definition"/>
                <field name="active" widget="boolean_toggle"/>
                </list>
        </field>
    </record>

    <record id="nena_document_type" model="ir.actions.act_window">
        <field name="name">Tipos de Documentos</field>
        <field name="res_model">nena.document.type</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>