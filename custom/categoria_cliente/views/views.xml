<odoo>
    <record id="view_categoria_cliente_form" model="ir.ui.view">
        <field name="name">categoria.cliente.form</field>
        <field name="model">categoria.cliente</field>
        <field name="arch" type="xml">
            <form string="Categoría de Cliente">
                <sheet>
                    <group>
                        <field name="codCategoria"/>
                        <field name="nombre"/>
                        <field name="nomedicina"/>
                        <field name="tipo_producto_id" string="Tipo de Producto"/>
                        <field name="websiteavaible" string="Web Site"/>
                        <field name="active" string="Activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_categoria_cliente_list" model="ir.ui.view">
        <field name="name">categoria.cliente.list</field>
        <field name="model">categoria.cliente</field>
        <field name="arch" type="xml">
            <list string="Categorías de Cliente">
                <field name="codCategoria"/>
                <field name="nombre"/>
                <field name="nomedicina"/>
                <field name="tipo_producto_id" string="Tipo de Producto"/>
                <field name="websiteavaible" string="Web Site"/>
                <field name="active" string="Activo"/>
            </list>
        </field>
    </record>

    <record id="action_categoria_cliente" model="ir.actions.act_window">
        <field name="name">Categorías de Cliente</field>
        <field name="res_model">categoria.cliente</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_categoria_cliente_root" name="Categorías de Cliente" sequence="10"/>
    <menuitem id="menu_categoria_cliente" name="Gestión de Categorías" parent="menu_categoria_cliente_root" action="action_categoria_cliente"/>
</odoo>