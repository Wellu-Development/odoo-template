<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="nena_product_family_view_tree" model="ir.ui.view">
    <field name="name">nena.product.family.view.tree</field>
    <field name="model">nena.product.family</field>
    <field name="arch" type="xml">
      <list>
        <field name="code"/>
        <field name="description"/>
        <field name="active" widget="boolean_toggle"/>
      </list>
    </field>
  </record>

  <record id="nena_product_family_view_form" model="ir.ui.view">
    <field name="name">nena.product.family.view.form</field>
    <field name="model">nena.product.family</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <h1>
              <field name="description" />
            </h1>
            <field name="code" />
            <field name="product_subtype_id" options="{'no_quick_create':True,'no_create':True,'no_create_edit':True 'no_open': True}"/>
            <field name="active" />
          </group>
        </sheet>
        <chatter />
      </form>
    </field>
  </record>

  <record id="nena_product_family_action" model="ir.actions.act_window">
    <field name="name">Familia de producto</field>
    <field name="res_model">nena.product.family</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
