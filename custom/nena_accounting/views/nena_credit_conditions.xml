<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nena_credit_conditions_view_form" model="ir.ui.view">
        <field name="name">nena.credit.conditions.view.form</field>
        <field name="model">nena.credit.conditions</field>
        <field name="arch" type="xml">
            <form string="Credit Conditions">
                <sheet>
                    <group>
                        <field name="credit_limit" />
                        <field name="balance" />
                        <field name="permit_overdraft" />
                        <field name="availability_amount" />
                        <field name="transit_amount" />
                        <field name="prepaid_amount" />
                        <field name="notes" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_credit_conditions_view_list" model="ir.ui.view">
        <field name="name">nena.credit.conditions.view.list</field>
        <field name="model">nena.credit.conditions</field>
        <field name="arch" type="xml">
            <list string="Credit Conditions">
                <field name="credit_limit" />
                <field name="balance" />
                <field name="permit_overdraft" />
                <field name="availability_amount" />
                <field name="transit_amount" />
                <field name="prepaid_amount" />
            </list>
        </field>
    </record>

    <record id="nena_credit_conditions_action" model="ir.actions.act_window">
        <field name="name">Credit Conditions</field>
        <field name="res_model">nena.credit.conditions</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>