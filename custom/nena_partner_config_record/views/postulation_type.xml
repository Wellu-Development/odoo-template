<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="postulation_type_view_tree" model="ir.ui.view">
    <field name="name">postulation.type.view.tree</field>
    <field name="model">postulation.type</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="code" />
        <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <record id="postulation_type_view_form" model="ir.ui.view">
    <field name="name">postulation.type.view.form</field>
    <field name="model">postulation.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <h1>
              <field name="name" />
            </h1>

            <field name="code" />
            <field name="active" widget="boolean_toggle" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="postulation_type_action" model="ir.actions.act_window">
    <field name="name">Postulation Types</field>
    <field name="res_model">postulation.type</field>
    <field name="view_mode">list,form,pivot</field>
  </record>

</odoo>
