<odoo>
    <record id="view_categoria_cliente_form" model="ir.ui.view">
        <field name="name">categoria.cliente.form</field>
        <field name="model">nena.customer.category</field>
        <field name="arch" type="xml">
            <form string="Categoría de Cliente">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="nomedicine" widget="boolean_toggle"/>
                        <field name="websiteavaible" widget="boolean_toggle"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="product_category_id" widget="many2many_tags"
                                options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_categoria_cliente_list" model="ir.ui.view">
        <field name="name">categoria.cliente.list</field>
        <field name="model">nena.customer.category</field>
        <field name="arch" type="xml">
            <list string="Categorías de Cliente">
                <field name="code"/>
                <field name="name"/>
                <field name="product_category_id" widget="many2many_tags"/>
                <field name="nomedicine" widget="boolean_toggle"/>
                <field name="websiteavaible" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="action_categoria_cliente" model="ir.actions.act_window">
        <field name="name">Categorías de Cliente</field>
        <field name="res_model">nena.customer.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>