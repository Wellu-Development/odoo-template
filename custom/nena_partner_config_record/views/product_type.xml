<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="product_type_view_tree" model="ir.ui.view">
    <field name="name">product.type.view.tree</field>
    <field name="model">product.type</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="code" widget="boolean_toggle"/>
        <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <record id="product_type_view_form" model="ir.ui.view">
    <field name="name">product.type.view.form</field>
    <field name="model">product.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <h1>
              <field name="name" />
            </h1>

            <field name="code" />
            <field name="is_website_available" widget="boolean_toggle"/>
            <field name="customer_type_id"/>
            <field name="supplier_type_id"/>
            <field name="active" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="product_type_action" model="ir.actions.act_window">
    <field name="name">Tipo de producto</field>
    <field name="res_model">product.type</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
