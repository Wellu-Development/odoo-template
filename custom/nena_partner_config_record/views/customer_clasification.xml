<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="customer_clasification_view_tree" model="ir.ui.view">
    <field name="name">nena.customer.clasification.view.tree</field>
    <field name="model">nena.customer.clasification</field>
    <field name="arch" type="xml">
      <list string="Clasificación de Cliente">
        <field name="code" />
        <field name="description" />
        <field name="amount_from" />
        <field name="amount_until" />
        <field name="gen_management_id" />
        <field name="ref" />
        <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <record id="customer_clasification_view_form" model="ir.ui.view">
    <field name="name">nena.customer.clasification.view.form</field>
    <field name="model">nena.customer.clasification</field>
    <field name="arch" type="xml">
      <form string="Clasificación de Cliente">
        <sheet>
          <group>
            <field name="code" />
            <field name="description" />
            <field name="amount_from" />
            <field name="amount_until" />
            <field name="gen_management_id" domain="[('code', 'in', ['CLI', 'CAD'])]"
                    options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}"/>
            <field name="ref" />
            <field name="active" widget="boolean_toggle" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="customer_clasification_action" model="ir.actions.act_window">
    <field name="name">Clasificación de Cliente</field>
    <field name="res_model">nena.customer.clasification</field>
    <field name="view_mode">list,form,pivot</field>
  </record>

</odoo>