<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_nena_group_form" model="ir.ui.view">
        <field name="name">nena.group.form</field>
        <field name="model">nena.group</field>
        <field name="arch" type="xml">
            <form string="Group">
                <sheet>
                    <group>
                        <h1><field name="name"/></h1>
                        <field name="code_group"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
        </record>

    <record id="nena_group_view_tree" model="ir.ui.view">
        <field name="name">nena.group.view.tree</field>
        <field name="model">nena.group</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="code_group"/> 
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="nena_group_action" model="ir.actions.act_window">
        <field name="name">Group</field>
        <field name="res_model">nena.group</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>