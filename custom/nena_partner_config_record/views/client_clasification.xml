<?xml version="1.0"?>
<odoo>

<record id="client_clasification_view_tree" model="ir.ui.view">
    <field name="name">nena.client.clasification.view.tree</field>
    <field name="model">nena.client.clasification</field>
    <field name="arch" type="xml">
      <list>
        <field name="code" />
        <field name="description" />
        <field name="amount_from" />
        <field name="amount_until" />
        <field name="type" />
        <field name="ref" />
        <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>

  <record id="client_clasification_view_form" model="ir.ui.view">
    <field name="name">nena.client.clasification.view.form</field>
    <field name="model">nena.client.clasification</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code" />
            <field name="description" />
            <field name="amount_from" />
            <field name="amount_until" />
            <field name="type" />
            <field name="ref" />
            <field name="active" widget="boolean_toggle" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="client_clasification_action" model="ir.actions.act_window">
    <field name="name">Client Clasification</field>
    <field name="res_model">nena.client.clasification</field>
    <field name="view_mode">list,form,pivot</field>
  </record>

</odoo>