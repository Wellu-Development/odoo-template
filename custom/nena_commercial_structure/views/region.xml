<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="region_view_tree" model="ir.ui.view">
    <field name="name">region.view.tree</field>
    <field name="model">region</field>
    <field name="arch" type="xml">
      <list>
            <field name="code" />
            <field name="name" />
            <field name="codgerente" />
            <field name="ref" />
            <field name="active" widget="boolean_toggle" />
      </list>
    </field>
  </record>
  <record id="region_view_form" model="ir.ui.view">
    <field name="name">region.view.form</field>
    <field name="model">region</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <h1>
              <field name="name" />
            </h1>
            <field name="code" />
            <field name="codgerente" />
            <field name="ref" />
            <field name="active" widget="boolean_toggle" />

          </group>
          <notebook>
            <page name="districts" string="districts">
                <field name="district_ids">
                    <list>
                         <field name="name" />
                         <field name="code" />   
                    </list>
                </field>
            </page>
          </notebook>
        </sheet>
        
      </form>
    </field>
  </record>
  <record id="region_action" model="ir.actions.act_window">
    <field name="name">Regi√≥n</field>
    <field name="res_model">region</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>