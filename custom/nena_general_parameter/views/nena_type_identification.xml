<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nena_type_identification_view_form" model="ir.ui.view">
        <field name="name">nena.type.identification.view.form</field>
        <field name="model">nena.type.identification</field>
        <field name="arch" type="xml">
            <form string="Types of Identification">
                <sheet>
                    <group>
                        <h1><field name="name" /></h1>
                        <field name="definition"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_type_identification_view_tree" model="ir.ui.view">
        <field name="name">nena.type.identification.view.list</field>
        <field name="model">nena.type.identification</field>
        <field name="arch" type="xml">
            <list string="Types of Identification">
                <field name="name"/>
                <field name="definition"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="nena_type_identification_action" model="ir.actions.act_window">
        <field name="name">Types of Identification</field>
        <field name="res_model">nena.type.identification</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="nena_type_identification_menu"
        name="Types of Identification"
        action="nena_type_identification_action"
        parent="nena_documents_menu"
        sequence="5"/>  
</odoo>