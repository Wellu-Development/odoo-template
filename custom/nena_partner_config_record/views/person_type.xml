<odoo>
    <record id="view_nena_person_type_form" model="ir.ui.view">
        <field name="name">nena.person.type.form</field>
        <field name="model">nena.person.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Persona">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_nena_person_type_list" model="ir.ui.view">
        <field name="name">nena.person.type.list</field>
        <field name="model">nena.person.type</field>
        <field name="arch" type="xml">
            <list string="Tipos de Persona" editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_nena_person_type" model="ir.actions.act_window">
        <field name="name">Tipos de Persona</field>
        <field name="res_model">nena.person.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>