<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nena_credit_conditions_chain_view_form" model="ir.ui.view">
        <field name="name">nena.credit.conditions.chain.view.form</field>
        <field name="model">nena.credit.conditions.chain</field>
        <field name="arch" type="xml">
            <form string="Availability Subgroups">
                <sheet>
                    <group>
                        <h1><field name="chain_id" readonly="1" /></h1>
                    </group>
                    <group>
                        <group colspan="2">
                            <group>
                                <field name="credit_limit" />
                                <field name="balance" />
                                <field name="permit_overdraft" />
                            </group>
                            <group>
                                <field name="transit_amount" />
                                <field name="prepaid_amount" />
                                <field name="availability_amount" />
                            </group>
                        </group>
                        <field name="notes" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_credit_conditions_chain_view_tree" model="ir.ui.view">
        <field name="name">nena.credit.conditions.chain.list</field>
        <field name="model">nena.credit.conditions.chain</field>
        <field name="arch" type="xml">
            <list string="Availability Subgroups">
                <field name="code" />
                <field name="name" />
                <field name="credit_limit" />
                <field name="balance" />
                <field name="permit_overdraft" />
                <field name="transit_amount" />
                <field name="prepaid_amount" />
                <field name="availability_amount" />
            </list>
        </field>
    </record>

    <record id="nena_credit_conditions_chain_action" model="ir.actions.act_window">
        <field name="name">Availability Subgroups</field>
        <field name="res_model">nena.credit.conditions.chain</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False}</field>
    </record>

    <menuitem
        id="nena_credit_conditions_chain__menu"
        name="Availability Subgroups"
        action="nena_credit_conditions_chain_action"
        parent="nena_partner_record_credit_conditions_menu"
        sequence="20"/>
</odoo>