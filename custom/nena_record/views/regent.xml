<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="regent_view_form" model="ir.ui.view">
        <field name="name">nena.regent.view.form</field>
        <field name="model">nena.regent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="o_td_label">
                            <label for="document_type_id" string='Cedula'/>
                        </div>
                        <div class="d-flex">
                            <field name="document_type_id" placeholder="Prefijo" style="width: 80px;"
                                    options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}" />
                            <span class="o_form_label mx-3 oe_edit_only text-center" style="width: 0ch; font-weight:bold;" >-</span>
                            <field name="id_number" placeholder="Numero" style="width: 120px;"/>
                        </div>
                        <field name="name" />
                        <field name="phone" />
                        <field name="address" />
                        <div class="o_td_label">
                            <label for="matric_msds"/>
                        </div>
                        <div class="d-flex">
                            <field name="matric_msds" style="width: 120px;" />
                            <span class="o_form_label mx-3 oe_edit_only text-center" style="width: 20ch; font-weight:bold;" >Desde Acta Func.</span>
                            <field name="oper_min_start_date" style="width: 120px;"/>
                        </div>
                        <div class="o_td_label">
                            <label for="colfar"/>
                        </div>
                        <div class="d-flex">
                            <field name="colfar" style="width: 120px;"/>
                            <span class="o_form_label mx-3 oe_edit_only text-center" style="width: 20ch; font-weight:bold;" >Hasta Acta Func.</span>
                            <field name="oper_min_end_date" style="width: 120px;"/>
                        </div>
                        <field name="inprefa_code" style="width: 80px;"/>
                        <div class="o_td_label">
                            <label for="sicm_code"/>
                        </div>
                        <div class="d-flex">
                            <field name="sicm_code" style="width: 120px;" />
                            <span class="o_form_label mx-3 oe_edit_only text-center" style="width: 20ch; font-weight:bold;" >Estatus S.I.C.M</span>
                            <field name="sicm_status_id" style="width: 120px;" domain="[('gen_management_id.code', '=', 'SICM')]"
                                    options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}"/>
                        </div>
                        <div class="o_td_label">
                            <label for="sada_code"/>
                        </div>
                        <div class="d-flex">
                            <field name="sada_code" style="width: 120px;" />
                            <span class="o_form_label mx-3 oe_edit_only text-center" style="width: 20ch; font-weight:bold;" >Estatus SADA</span>
                            <field name="sada_status_id" style="width: 120px;" domain="[('gen_management_id.code', '=', 'SADA')]"
                                    options="{'no_quick_create':True,'no_create':True,'no_create_edit':True,'no_open': True}"/>
                        </div>
                        <field name="notes" />
                        <notebook>
                            <page string="Expedientes Asociados">
                                <field name="record_ids">
                                    <list delete="0" create="0">
                                        <field name="name" />
                                        <field name="status_id" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>