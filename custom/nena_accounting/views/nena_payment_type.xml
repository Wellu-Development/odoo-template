<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nena_payment_type_view_tree" model="ir.ui.view">
        <field name="name">nena.payment.type.view.tree</field>
        <field name="model">nena.payment.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="nena_payment_type_view_form" model="ir.ui.view">
        <field name="name">nena.payment.type.view.form</field>
        <field name="model">nena.payment.type</field>
        <field name="arch" type="xml">
            <form string="Payment Type">
                <sheet>
                    <group>
                        <field name="description" placeholder="Description..."/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_payment_type_action" model="ir.actions.act_window">
        <field name="name">Payment Type</field>
        <field name="res_model">nena.payment.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>