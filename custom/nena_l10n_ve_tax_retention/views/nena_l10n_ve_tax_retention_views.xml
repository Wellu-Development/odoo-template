<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista tipo formulario -->
    <record id="view_form_tax_retention" model="ir.ui.view">
        <field name="name">nena.l10n.ve.tax.retention.form</field>
        <field name="model">nena.l10n.ve.tax.retention</field>
        <field name="arch" type="xml">
            <form string="Tax Retention">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="retention_type"/>
                        <field name="rate"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="is_current" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista tipo lista -->
    <record id="view_list_tax_retention" model="ir.ui.view">
        <field name="name">nena.l10n.ve.tax.retention.list</field>
        <field name="model">nena.l10n.ve.tax.retention</field>
        <field name="arch" type="xml">
            <list string="Tax Retentions">
                <field name="name"/>
                <field name="retention_type"/>
                <field name="rate"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="is_current"/>
            </list>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_nena_l10n_ve_tax_retention" model="ir.actions.act_window">
        <field name="name">Tax Retentions</field>
        <field name="res_model">nena.l10n.ve.tax.retention</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Registra y consulta las tasas de retención de IVA según el SENIAT.</p>
        </field>
    </record>
</odoo>