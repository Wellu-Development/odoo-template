<odoo>
    <record id="nena_drug_active_principle_view_form" model="ir.ui.view">
        <field name="name">nena.drug.active.principle.form</field>
        <field name="model">nena.drug.active.principle</field>
        <field name="arch" type="xml">
            <form string="Active Principle">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nena_drug_active_principle_view_list" model="ir.ui.view">
        <field name="name">nena.drug.active.principle.list</field>
        <field name="model">nena.drug.active.principle</field>
        <field name="arch" type="xml">
            <list string="Active Principle">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="nena_drug_active_principle_action" model="ir.actions.act_window">
        <field name="name">Active Principle</field>
        <field name="res_model">nena.drug.active.principle</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="nena_medication_management_menu" 
                name="Medication Management" 
                parent="stock.menu_stock_config_settings" 
                sequence="10" />
                
    <menuitem id="nena_drug_active_principle_menu" 
                name="Active Principle" 
                action="nena_drug_active_principle_action" 
                parent="nena_medication_management_menu" 
                sequence="10" />
</odoo>