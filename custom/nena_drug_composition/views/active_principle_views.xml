<odoo>
    <record id="view_active_principle_form" model="ir.ui.view">
        <field name="name">drug.active.principle.form</field>
        <field name="model">nena.drug.active.principle</field>
        <field name="arch" type="xml">
            <form string="Active Principle">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_active_principle_list" model="ir.ui.view">
        <field name="name">drug.active.principle.list</field>
        <field name="model">nena.drug.active.principle</field>
        <field name="arch" type="xml">
            <list string="Active Principles">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="action_active_principle" model="ir.actions.act_window">
        <field name="name">Active Principles</field>
        <field name="res_model">nena.drug.active.principle</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_drug_root" name="Drug Management"/>
    <menuitem id="menu_active_principle" name="Active Principles" parent="menu_drug_root" action="action_active_principle"/>
</odoo>