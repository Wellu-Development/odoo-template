<odoo>
    <data>

        <!-- Vista lista: mostrar municipios -->
        <record id="view_state_list_inherit_municipality" model="ir.ui.view">
            <field name="name">res.country.state.list.inherit.municipality</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="municipality_ids">
                        <list>
                            <field name="name"/>
                            <field name="code"/>
                        </list>
                    </field>
                </xpath>
            </field>
        </record>

